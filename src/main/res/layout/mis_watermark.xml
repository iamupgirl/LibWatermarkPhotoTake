<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mis_white">

    <RelativeLayout
        android:id="@+id/rl_face_take_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.nereo.multi_image_selector.view.MySurfaceView
            android:id="@+id/take_photo_surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_take_photo_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_take_cancel" />

    <ImageView
        android:id="@+id/iv_take_photo_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_exchange" />

    <ImageView
        android:id="@+id/iv_take_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:src="@drawable/icon_take" />

    <me.nereo.multi_image_selector.view.WaterMarkView
        android:id="@+id/rl_time_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>